        <Spinner
            android:id="@+id/divisaSalida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:entries="@array/monedas"
            tools:layout_conversion_absoluteHeightsoluteX="242dp"
            tools:layout_conversion_absoluteWidth="165dp"
            tools:layout_editor_ab="24dp"
            tools:layout_editor_absoluteY="352dp" />
    </LinearLayout>


    <Button
        android:id="@+id/botonCalcular"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
