        <Spinner
            android:id="@+id/divisaEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/monedas"
            tools:layout_conversion_absoluteHeightsoluteX="297dp"
            tools:layout_conversion_absoluteWidth="109dp"
            tools:layout_editor_ab="24dp"
            tools:layout_editor_absoluteY="308dp" />
    </LinearLayout>


